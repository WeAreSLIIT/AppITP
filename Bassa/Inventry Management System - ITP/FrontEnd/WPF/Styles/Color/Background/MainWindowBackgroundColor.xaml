<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Styles.Color.Background">

    <!-- Left Nav Background Color -->
    <Color x:Key="LeftNav-Background-Color" A="255" R="42" G="63" B="84"/>
    <SolidColorBrush x:Key="LeftNav-Background-SolidColorBrush" Color="#2A3F54"/>

    <!-- Top Nav Background Color -->
    <Color x:Key="TopNav-Background-Color" A="255" R="237" G="237" B="237"/>
    <SolidColorBrush x:Key="TopNav-Background-SolidColorBrush" Color="#EDEDED"/>

    <!-- Content Background Color -->
    <Color x:Key="Content-Background-Color" A="255" R="247" G="247" B="247"/>
    <SolidColorBrush x:Key="Content-Background-SolidColorBrush" Color="#F7F7F7"/>

</ResourceDictionary>